{
  "name": "mvc-test-orchestrator",
  "displayName": "MVC Test Orchestrator V1.2",
  "description": "LLM-powered MVC architecture extractor and scaffolder.",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mvc-test-orchestrator.createSrsAndExtract",
    "onCommand:mvc-test-orchestrator.indexSrsAndExtract",
    "onCommand:mvc-test-orchestrator.generateScaffold",
    "onCommand:mvc-test-orchestrator.runAudit", 
    "onCommand:mvc-test-orchestrator.runCode",
    "onView:mvcArchitectureView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
{
        "command": "mvc-test-orchestrator.createSrsAndExtract",
        "title": "MVC: 1a. Create SRS (from idea) - Step 1",
        "category": "MVC Orchestrator"
      },
      {
        "command": "mvc-test-orchestrator.indexSrsAndExtract",
        "title": "MVC: 1b. Extract Architecture from SRS - Step 2",
        "category": "MVC Orchestrator"
      },
      {
        "command": "mvc-test-orchestrator.generateScaffold",
        "title": "MVC: 2. Generate Scaffold",
        "category": "MVC Orchestrator"
      },
      { 
        "command": "mvc-test-orchestrator.runCode",
        "title": "MVC: 3. Generate Code Logic (Coder Agent)",
        "category": "MVC Orchestrator"

      },
      {
        "command": "mvc-test-orchestrator.runAudit",
        "title": "MVC: 4. Run Quality Audit (Rules & Reviewer)",
        "category": "MVC Orchestrator"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mvcArchitectureContainer",
          "title": "MVC",
          "icon": "resources/mvc-icon.svg"
        }
      ]
    },
    "views": {
      "mvcArchitectureContainer": [
        {
          "id": "mvcArchitectureView",
          "name": "ðŸ“¦ MVC Architecture"
        }
      ]
    }
  },
  "scripts": {
    "test": "mocha -r ts-node/register src/test/**/*.ts",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.1",
    "@types/vscode": "^1.106.1",
    "mocha": "^11.7.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}